<% if resource.photo.persisted? %>
  <div>
    <img src="<%= url_for(resource.sized_photo(:thumbnail)) %>" />
    <p><%= link_to('Original', url_for(resource.photo)) %></p>
    <p><%= link_to('Large', url_for(resource.sized_photo(:large))) %></p>
    <p><%= link_to('Thumbnail', url_for(resource.sized_photo(:thumbnail))) %></p>
  </div>
<% else %>
  <div>No photo</div>
<% end %>
